<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">#EEE</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Attributes for MaterialBottomDialog -->
        <item name="dialogSheetBackground">@android:color/white</item>
        <item name="dialogSheetIconTintColor">@android:color/primary_text_light</item>
        <item name="dialogSheetLabelTintColor">@android:color/primary_text_light</item>
        <item name="dialogSheetLightNavigationBar">true</item>
        <item name="dialogSheetCornerRadius">@dimen/material_corner_radius</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/darkModeColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkModeColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:navigationBarColor">@color/darkModeBackground</item>

        <!-- Attributes for MaterialBottomDialog -->
        <item name="dialogSheetBackground">@color/darkModeBackground</item>
        <item name="dialogSheetIconTintColor">@android:color/white</item>
        <item name="dialogSheetLabelTintColor">@android:color/white</item>
        <item name="dialogSheetLightNavigationBar">false</item>
        <item name="dialogSheetCornerRadius">@dimen/material_corner_radius</item>
    </style>

</resources>
